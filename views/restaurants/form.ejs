<%- include('layout', { title: 'Crear Restaurante' }) %>

<main>
  <h2>Crear Restaurante</h2>
  <form action="/create-restaurant" method="POST">
    <input type="text" name="name" placeholder="Nombre del restaurante" required>
    <input type="number" name="latitude" placeholder="Latitud" step="any" required>
    <input type="number" name="longitude" placeholder="Longitud" step="any" required>
    <input type="text" name="cuisine_type" placeholder="Tipo de cocina" required>
    <button type="submit">Crear Restaurante</button>
  </form>
</main>